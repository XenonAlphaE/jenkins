FROM jenkins/jenkins:lts

USER root

# keep your extra tools
RUN apt-get update && apt-get install -y \
    dnsutils \
    python3 \
    build-essential \
    redis-tools \
    rsync \
    curl \
    git \
    iputils-ping \
    && rm -rf /var/lib/apt/lists/*

# âœ… install modern docker client + buildx
RUN curl -fsSL https://get.docker.com | sh
RUN docker --version  # sanity check

USER jenkins
